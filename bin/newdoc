set -e

case "${_docinto_dir}" in
	'')	docdir=/usr/share/doc/${P} ;;
	/*)	docdir=/usr/share/doc${_docinto_dir} ;;
	*)	docdir=/usr/share/doc/${P}/${_docinto_dir} ;;
esac

dodir ${docdir}

if [ ! -e ${1} ]
then
	error "file ${1} does not exist"
fi

/bin/install -m0644 ${1} ${D}${docdir}/${2} || error "newdoc ${1} failed"
