set -e

for d
do
	if [ ! -d ${D}${d} ]
	then
		error "directory ${d} does not exist"
	fi

	dodir /etc/postinstall /etc/preremove

	d_="${d//\//_}"

	cd ${D}${d}
	tar jcf ${D}/etc/postinstall/${PN}-${d_}.tar.bz2 *

	cd ${D}
	rm -fr ${D}${d}

	cat >> ${D}/etc/postinstall/${PN}.sh <<-_EOF
		if [ ! -d ${d} ]
		then
		    mkdir -p ${d}
		    mount -o managed \$(cygpath -w ${d}) ${d}
		    tar jxf /etc/postinstall/${PN}-${d_}.tar.bz2 -C ${d}
		fi

		_EOF

	cat >> ${D}/etc/preremove/${PN}.sh <<-_EOF
		rm -fr ${d}/*
		sleep 1
		umount ${d}
		rmdir ${d}
		
		_EOF
done
