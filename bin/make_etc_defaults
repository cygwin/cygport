set -e

for etc
do
	if [ ! -f ${D}${etc} ]
	then
		error "file ${etc} does not exist"
	fi

	dodir /etc/defaults${etc%/*}
	/bin/mv ${D}${etc} ${D}/etc/defaults${etc}

	dodir /etc/postinstall
	cat >> ${D}/etc/postinstall/${PN}.sh <<-_EOF
		if [ ! -f ${etc} ]
		then
		    /bin/cp /etc/defaults${etc} ${etc}
		fi
		
		_EOF
done
