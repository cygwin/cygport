set -e

if ! defined _exeinto_dir || [ ! -d ${D}${_exeinto_dir} ]
then
	error: "exeinto must be called before newexe"
fi

if [ ! -e ${1} ]
then
	error "file ${1} does not exist"
fi

/bin/install -m0755 ${1} ${D}${_exeinto_dir}/${2} || error "newexe ${1} failed"
